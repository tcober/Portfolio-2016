!function(a,b){$(".loader").on("click",function(){$(".design, .worklist").addClass("outside"),$(".music, .code, .name").addClass("inside");var b=$(this).html();$(".diamond").attr("class","diamond diamondchange");var c=window.location+$(this).attr("data");$(".contentHolder").load(c,function(c,d,e){"error"==d&&alert("So Sorry! You can wait a sec or reload. I am working to fix this."),$(".portimages").fadeToggle(0),$(".description h3").append(b),$(".diamond").attr("class","diamond"),$(a).scroll(function(b){var c=$(a).scrollTop(),d=80+(100-(100-$(a).scrollTop()/10))+"%";$(".portdescription").css({opacity:(100-c)/100}),$(".portimages").css("width",d)}),$(".design, .worklist").removeClass("outside"),$(".music, .code, .name").removeClass("inside"),$(".worklist, .portdescription").fadeToggle(150),$(".closer").on("click",function(){$(".portdescription, .portimages").remove(),$(".portimages, .portdescription").toggle(),$(".worklist").toggle(),$(".description h3").empty()})})}),$(".musicCloser").on("click",function(){$(".player, .twitter, .menu").toggle(),$(".music").removeClass("selected")}),$(".button").on("click",function(){$(".button"),($(this).is(".music")||$(this).is(".code"))&&$(".design").is(".selected")&&$(".worklist, .twitter").toggle(),0==$(this).hasClass("selected")&&$(".button").removeClass("selected"),$(this).toggleClass("selected")}),$(".music").on("click",function(){$(".player, .twitter, .menu").toggle()}),$(".design").on("click",function(){$(".worklist, .twitter").toggle()})}(window,document);